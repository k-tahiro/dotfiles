{{- isWindows := eq .chezmoi.os "windows" -}}
{{- isMac := eq .chezmoi.os "darwin" -}}
{{- isWsl := and (eq .chezmoi.os "linux") (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}

[data]
    isWsl = {{ $isWsl }}
    isWork = {{ or (eq .chezmoi.os "darwin") (and (eq .chezmoi.os "linux") (not .isWsl)) }}
    isHeadless = {{ not (or (eq .chezmoi.os "windows") (eq .chezmoi.os "darwin")) }}

[edit]
    apply = true
{{- if eq .chezmoi.os "windows" }}
    command = "code"
    args = ["--wait"]
{{- else }}
    command = "nvim"
{{- end }}

[git]
    autoCommit = true
    autoPush = true
